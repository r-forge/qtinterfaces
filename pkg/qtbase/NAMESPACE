
useDynLib(qtbase, .registration = TRUE)

# metadata
export(qnormalizedSignature, qproperties)

# timer
export(qtimer)

# signals
export(qconnect)

# invoke
export(qinvoke)

# constructors of simple types
export(qrect, qpoint, qsize, qcolor, qfont, qmatrix)

S3method(qmatrix, NULL)
S3method(qmatrix, matrix)

# smoke library
S3method(print, RQtLibrary)

# classes
S3method("$", RQtClass)
S3method(print, RQtClass)
S3method(print, QWidget) ## calls $show()
export(qmethods, qsetClass, qsetMethod)

# enums
S3method("|", QtEnum)
S3method("&", QtEnum)

# the Qt smoke library
export(Qt)

## convenience for stylesheet manipulation
export(qsetStyleSheet, qstyleSheet)

## label for testing
export(testLabel)

## explicit coercions
export(as.matrix.QRectF)
export(as.matrix.QRect)

export(as.vector.QPointF)
export(as.vector.QPoint)

export(as.vector.QSizeF)
export(as.vector.QSize)

export(as.matrix.QTransform)

export(as.raw.QByteArray)
export(as.character.QByteArray)

export(qcol2rgb)
export(as.matrix.QColor )
