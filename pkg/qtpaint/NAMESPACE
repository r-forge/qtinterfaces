useDynLib(qtpaint)

## the core Smoke library
export(Qanviz)

## to load our library
importFrom(qtbase, qlibrary)

## the Qt library
importFrom(qtbase, Qt)
export(Qt)

## simple constructors from qtbase
importFrom(qtbase, qrect, qpoint, qsize, qcolor, qfont, qtransform)
export(qrect, qpoint, qsize, qcolor, qfont, qtransform)

## the Painter API
export("qantialias<-",
       qdrawCircle,
       "qdash<-",
       "qfillColor<-",
       "qfont<-",
       qdrawGlyph,
       "qhasFill<-",
       "qhasStroke<-",
       "qlineWidth<-",
       "qdeviceTransformEnabled<-",
       qdrawPoint,
       qdrawPolygon,
       qdrawLine,
       qdrawRect,
       qdrawSegment,
       "qstrokeColor<-",
       qdrawText,
       qstrWidth,
       qdrawImage,
       qdeviceTransform,
       "qdeviceTransform<-",
       qtextExtents
       )

## convenience constructors
export(qlayer, qplotView)

## glyph generators
export(qglyphCircle, qglyphSquare, qglyphTriangle, qglyphText)

## some transformation conveniences
export(qmap, qflipY)

## other wrappers
S3method("[<-", "Qanviz::Layer")
S3method("[", "Qanviz::Layer")
S3method(dim, QGraphicsView)

export(qupdate)
S3method(qupdate, QGraphicsView)
S3method(qupdate, QGraphicsScene)
S3method(qupdate, QGraphicsItem)
